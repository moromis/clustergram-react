{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "DOM",
            "ES6",
            "DOM.Iterable",
            "ScriptHost",
            "ES2016.Array.Include"
        ],
        "module": "ES6",
        "moduleResolution": "Node",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "strict": true,
        "jsx": "react",
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
    ]
}